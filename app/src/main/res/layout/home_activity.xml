<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="211dp"
        android:layout_height="147dp"
        android:layout_marginTop="48dp"
        android:contentDescription="logo_accueil"
        android:src="@drawable/cook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="182dp"
        android:layout_height="36dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/bangers"
        android:lineSpacingExtra="8sp"
        android:text="@string/title"
        android:textColor="#7280DC"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/buttonStarters"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/buttonStarters"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#BCA9EC"
        app:iconPadding="10dp"
        app:iconTint="#A12A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonDishes"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/buttonDishes"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#BCA9EC"
        app:iconPadding="10dp"
        app:iconTint="#A12A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStarters" />

    <Button
        android:id="@+id/buttonDessert"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/buttonDessert"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#BCA9EC"
        app:iconPadding="10dp"
        app:iconTint="#A12A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDishes" />

    <Button
        android:id="@+id/buttonBle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BCA9EC"
        android:text="Bluetooth"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDessert" />

</androidx.constraintlayout.widget.ConstraintLayout>